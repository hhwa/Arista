<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 용량제한 100MB로 설정 -->
	<constant name="struts.multipart.maxSize" value="104857600" />

	<!-- Match -->
	<package name="match" extends="struts-default,tiles-default">

		<!-- 매치선택 페이지 -->
		<action name="selectMatch" class="matchState.matchAction" method="form">
			<result type="tiles">selectMatch</result>
			<result name="login" type="tiles">loginForm</result>
		</action>

		<!-- 솔로&팀매치 신청 -->
		<action name="joinMatch" class="matchState.matchAction" method="join">
			<result type="redirect-action">
				<param name="actionName">main</param>
			</result>
			<result name="error">/error/teamMatchError.jsp</result>
		</action>
		<!-- 솔로매치 신청 -->
		<action name="joinSoloMatch" class="soloMatch.soloMatchAction" method="join">
			<result type="redirect-action">
				<param name="actionName">SoloMatchList</param>
			</result>
		</action>
		<!-- 솔로매치 리스트 -->
		<action name="SoloMatchList" class="soloMatch.soloMatchAction">
			<result type="tiles">SoloMatchList</result>
		</action>
		<!-- 솔로매치 생성폼 -->
		<action name="CreateSoloMatchForm" class="soloMatch.soloMatchAction" method="form">
			<result type="tiles">CreateSoloMatchForm</result>
		</action>
		<!-- 솔로매치 생성처리 -->
		<action name="CreateSoloMatch" class="soloMatch.soloMatchAction" method="create">
			<result type="redirect-action">
				<param name="actionName">SoloMatchList</param> <!-- 처리 후 솔로매치 리스트로 -->
			</result>
		</action>

		<!-- 솔로매치 수정 폼 -->
		<action name="modifySoloMatchForm" class="soloMatch.soloMatchAction">
			<result type="chain">CreateSoloMatchForm</result>
		</action>
		<!-- 솔로매치 수정처리 -->
		<action name="modifySoloMatch" class="soloMatch.soloMatchAction" method="modify">
			<result type="redirect-action">
				<param name="actionName">SoloMatchList</param> <!-- 처리 후 솔로매치 리스트로 -->
			</result>
		</action>
		<!-- 솔로매치 취소 (메인에서) -->
		<action name="cancelMatch" class="matchState.matchAction" method="cancel">
			<result type="redirect-action">
				<param name="actionName">main</param>
			</result>
		</action>
		<!-- 솔로매치 삭제  -->
		<action name="deleteSoloMatch" class="soloMatch.soloMatchAction" method="delete">
			<result type="redirect-action">
				<param name="actionName">SoloMatchList</param>
			</result>
		</action>
		<!-- 팀매치 수정 폼 -->
		<action name="modifyTeamMatchForm" class="teamMatch.teamMatchAction">
			<result type="chain">CreateTeamMatchForm</result>
		</action>
		<!-- 팀매치 수정처리 -->
		<action name="modifyTeamMatch" class="teamMatch.teamMatchAction" method="modify">
			<result type="redirect-action">
				<param name="actionName">TeamMatchList</param> <!-- 처리 후 솔로매치 리스트로 -->
			</result>
		</action>
		<!-- 팀매치 삭제 -->
		<action name="deleteTeamMatch" class="teamMatch.teamMatchAction" method="delete">
			<result type="redirect-action">
				<param name="actionName">TeamMatchList</param>
			</result>
		</action>

		<!-- 팀매치 리스트 -->
		<action name="TeamMatchList" class="teamMatch.teamMatchAction">
			<result type="tiles">TeamMatchList</result>
		</action>

		<!-- 팀매치 신청 -->
		<action name="joinTeamMatch" class="teamMatch.teamMatchAction" method="join">
			<result type="redirect-action">
				<param name="actionName">TeamMatchList</param>
			</result>
			<result name="error">/error/teamMatchError.jsp</result>
		</action>
		<!-- 팀매치 생성폼 -->
		<action name="CreateTeamMatchForm" class="teamMatch.teamMatchAction" method="form">
			<result type="tiles">CreateTeamMatchForm</result>
		</action>
		<!-- 팀매치 생성처리 -->
		<action name="CreateTeamMatch" class="teamMatch.teamMatchAction" method="create">
			<result type="redirect-action">
				<param name="actionName">TeamMatchList</param> <!-- 처리 후 솔로매치 리스트로 -->
			</result>
		</action>
	</package>
</struts>
