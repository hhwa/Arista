<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 용량제한 100MB로 설정 -->
	<constant name="struts.multipart.maxSize" value="104857600" />

	<!-- footer 약관 -->
	<package name="footer" extends="struts-default,tiles-default">
		<action name="privacy" class="footer.footerAction" method="layout">
			<result type="tiles">privacy</result>
		</action>
		<action name="promise" class="footer.footerAction" method="layout">
			<result type="tiles">promise</result>
		</action>
		<action name="emailx" class="footer.footerAction" method="layout">
			<result type="tiles">emailx</result>
		</action>
	</package>

</struts>
