<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC '-//ibatis.apache.org//DTD Sql Map 2.0//EN' 'http://ibatis.apache.org/dtd/sql-map-2.dtd'>
<sqlMap namespace="memSQL">

	<typeAlias alias="mem" type="mem.memVO"/>
	
		<!-- 리절트 맵 정의 -->
		<resultMap id="memRes" class="mem">
			<result property="m_id" column="m_id"/>
			<result property="m_passwd" column="m_passwd"/>
			<result property="m_name" column="m_name"/>
			<result property="m_mobilephone" column="m_mobilephone"/>
			<result property="m_birthyear" column="m_birthyear"/>
			<result property="m_region" column="m_region"/>
			<result property="m_email" column="m_email"/>
			<result property="m_joindate" column="m_joindate"/>
			<result property="m_position" column="m_position"/>
			<result property="admin_yn" column="admin_yn"/>
			<result property="prof_image_org" column="prof_image_org"/>
			<result property="prof_image_save" column="prof_image_save"/>
			<result property="m_nickname" column="m_nickname"/>
		</resultMap>
		
		<!-- 공통으로 사용할 select 절 정의 -->
		<sql id="select-all">
			select * from mem
		</sql>
		<sql id="where-id">
			where m_id=#m_id#
		</sql>
		
		<!-- select 쿼리문 정의 -->
		
		<!-- 아이디 중복확인  -->
		<select id="idcheck" resultMap="memRes" parameterClass="mem">
		<include refid="select-all"/>
		<include refid="where-id"/>
		</select>
		
		<!-- 닉네임 중복확인  -->
		<select id="nickcheck" resultMap="memRes" parameterClass="mem">
			<include refid="select-all"/>
			WHERE M_NICKNAME = #m_nickname#
		</select>
		
		<!-- 이메일 중복확인  -->
		<select id="emailcheck" resultMap="memRes" parameterClass="mem">
			<include refid="select-all"/>
			WHERE M_EMAIL = #m_email#
		</select>
		
		<!-- 로그인 처리 -->
		<select id="loginPro" resultMap="memRes" parameterClass="mem">
			<include refid="select-all"/>
			WHERE m_id=#m_id# AND M_PASSWD=#m_passwd#
		</select>
		
		<!-- ID 찾기 -->
		<select id="findId" resultMap="memRes" parameterClass="mem">
			<include refid="select-all"/>
			WHERE M_NAME=#m_name# AND M_EMAIL=#m_email#
		</select>
		
		<!-- 비밀번호 찾기 -->
		<select id="findPw" resultMap="memRes" parameterClass="mem">
			<include refid="select-all"/>
			WHERE M_NAME=#m_name# AND M_EMAIL=#m_email# AND m_id=#m_id#
		</select>
		
		
		
		<!-- 관리자 - 회원 목록 -->
		<select id="memList" resultMap="memRes">
			<include refid="select-all"/>
			order by m_joindate desc
		</select>
		
		<!-- 관리자 - 회원 상세  -->
		<select id="memListView" resultMap="memRes" parameterClass="mem">
		<include refid="select-all"/>
		<include refid="where-id"/>
		</select>
		
	
		
