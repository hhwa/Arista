<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
	<!-- 용량제한 100MB로 설정 -->
	<constant name="struts.multipart.maxSize" value="104857600"/>
	

	<package name="stadium" extends="struts-default">

		 <!-- 경기장 리스트 액션 -->
		 <action name="stadiumlistAction" class="stadium.stadiumlistAction">
		   <result>/stadium/stadiumList.jsp</result>
		 </action>
		 
		 <!-- 경기장 등록/수정 액션 -->
          <action name="stadiumwriteFormAction" class="stadium.stadiumwriteAction" method="form">
              <result>/stadium/stadiumWrite.jsp</result>
          </action>  
	     
	     <action name="stadiumwriteAction" class="stadium.stadiumwriteAction">
	       <result type="redirect-action">
	          <param name="actionName">stadiumlistAction</param>
	       </result>
	     </action>

         <!-- 게시판 상세보기 액션 -->
         <action name="stadiumviewAction" class="stadium.stadiumviewAction">
               <result>/stadium/stadiumView.jsp</result>
         </action>
         
	</package>
</struts>