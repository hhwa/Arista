<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
	
	<struts>
	
		<!-- 용량제한 100MB로 설정 -->
		<constant name="struts.multipart.maxSize" value="104857600"/>
	
		<package name="stadium" extends="struts-default,tiles-default">

		 	<!-- 경기장 리스트 액션 -->
		 	<action name="stadiumList" class="stadium.stadiumListAction">
		 	  	<result type="tiles">StadiumList</result>
		 	</action>
		 
		 	<!-- 경기장 등록/수정 액션 -->
          	<action name="stadiumWriteForm" class="stadium.stadiumWriteAction" method="form">
              	<result type="tiles">StadiumWriteForm</result>
          	</action>  
	     
		    <action name="stadiumWrite" class="stadium.stadiumWriteAction">
	       		<result type="redirect-action">
	        		<param name="actionName">stadiumList</param>
	       		</result>
	     	</action>

         	<!-- 게시판 상세보기 액션 -->
         	<action name="stadiumView" class="stadium.stadiumViewAction">
            	<result type="tiles">StadiumView</result>
         	</action>
         
         	<!-- 게시판 수정 액션 -->
         	<action name="stadiumModifyForm" class="stadium.stadiumViewAction">
            	<result type="chain">stadiumWriteForm</result>
         	</action>
         
         	<action name="stadiumModify" class="stadium.stadiumModifyAction">
            	<result type="chain">stadiumView</result>
         	</action>
		</package>
	</struts>
