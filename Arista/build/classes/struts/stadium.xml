<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 용량제한 100MB로 설정 -->
	<constant name="struts.multipart.maxSize" value="104857600" />

	<package name="stadium" extends="struts-default,tiles-default">

		<!-- 경기장 리스트 액션 -->
		<action name="StadiumList" class="stadium.StadiumAction">
			<result type="tiles">StadiumList</result>
		</action>

		<!-- 경기장 등록/수정 액션 -->
		<action name="StadiumForm" class="stadium.StadiumAction"
			method="form">
			<result type="tiles">StadiumWriteForm</result>
		</action>

		<action name="StadiumWrite" class="stadium.StadiumAction"
			method="write">
			<result type="redirect-action">
				<param name="actionName">StadiumList</param>
			</result>
		</action>

		<!-- 경기장 상세보기 액션 -->
		<action name="StadiumView" class="stadium.StadiumAction"
			method="view">
			<result type="tiles">StadiumView</result>
		</action>

		<!-- 경기장 수정 액션 -->
		<action name="StadiumModifyForm" class="stadium.StadiumAction"
			method="view">
			<result type="chain">StadiumForm</result>
		</action>

		<action name="StadiumModify" class="stadium.StadiumAction"
			method="modify">
			<result type="chain">StadiumView</result>
		</action>

		<!-- 경기장 삭제하기액션 -->
		<action name="StadiumDelete" class="stadium.StadiumAction"
			method="delete">
			<result type="chain">StadiumList</result>
		</action>

		<!-- 경기장 신청하기 -->
		<action name="StadiumApplyForm" class="stadium.StadiumAction"
			method="form2">
			<result type="tiles">StadiumApplyForm</result>
		</action>

		<action name="StadiumApply" class="stadium.StadiumAction"
			method="apply">
			<result type="redirect-action">
				<param name="actionName">StadiumList</param>
			</result>
		</action>
	</package>
</struts>
